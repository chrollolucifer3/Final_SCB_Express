doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css', integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css')
    link(rel="stylesheet", href="/css/style.css")
    title Change PassWord
  body 
    include ./includes/header
    
    .container.pd-100.d-flex.justify-content-center
      .form-container
        h5.title Change Password
        form.form(method="POST" action=`/update-password`)
            input.input(type="password" placeholder="Current Password" name="currentPassword")
            input.input(type="password" placeholder="New Password" name="newPassword")
            input.input(type="password" placeholder="Enter a new password" name="confirmNewPassword")
            if errMessage
                    p.mt-4.error=errMessage
            button.form-btn(type="submit") Change Password

    

    include ./includes/footer

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js', integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM', crossorigin='anonymous')
