doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css', integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css')
    link(rel="stylesheet", href="/css/style.css")
    title Change PassWord
  body 
    include ./includes/header
    
    .container.mt-4.pd-100
        h1 Change PassWord
        form.container.mt-4(method="POST" action=`/update-password`)

            .mb-3
                label(for="currentPassword") Current Password
                input.form-control(type="password", id="floatingPassword", name="currentPassword")

                label.mt-4(for="newPassword") New Password
                input.form-control(type="password", name="newPassword")

                label.mt-4(for="confirmNewPassword") Enter a new password
                input.form-control(type="password", name="confirmNewPassword")
            
            button(type="submit" class="btn btn-primary") Change Password

            if errMessage
                    p.mt-4.error=errMessage
    

    include ./includes/footer

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js', integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM', crossorigin='anonymous')
