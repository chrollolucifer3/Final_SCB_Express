doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css',
    integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC', crossorigin='anonymous')
    link(rel="stylesheet", href="/css/style.css")

    title Create Card
  body 
    include ./includes/header

    .container.mt-4.pd-100
        h1 Create Card
        form.container.mt-4(method="POST" action="/card/store" enctype="multipart/form-data")
            .mb-3
                label(for="Card-title" class="form-label") Card title
                input(type="text" class="form-control ipwidth_1" name="title" id="card-title")

            .mb-3
                label(for="attachment" class="form-label") Attach File
                input(type="file" class="form-control ipwidth_1" name="attachment" id="attachment")

            .mb-3
                label(for="cover" class="form-label") Card Cover
                input(type="file" class="form-control ipwidth_1" name="cover" id="cover")

            .mb-3
                label(for="dueDate" class="form-label") Due Date
                input(type="date" class="form-control ipwidth_1" name="dueDate" id="dueDate")

            button(type="submit" class="btn btn-primary") Create


    include ./includes/footer

  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js', 
  integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM')
