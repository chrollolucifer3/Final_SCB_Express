doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css', integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css')
    link(rel="stylesheet", href="/css/style.css")
    title Document
  body 
    include ./includes/header
    .content(style=`background-image: url('/img/cover/${board.cover}')`)
      .navbar.navbar-expand-lg.bg-white
        span.navbar-brand.mb-0.h4= board.title
        .collapse.navbar-collapse#navbarText
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.btn.nav-link(href=`/${board.id}/create-list`) Create List

      .container
        .row
          each list in lists
            .col-md-3.mt-4
              .card.card-list
                .card-header= list.title
                ul.list-group.list-group-flush
                    each card in list.cards
                      li.list-group-item.card-content
                        a(href=`/${card.id}/card-detail`)= card.title
                        .delete-card 
                          a(href=`/${card.id}/delete-card` class="delete-icon")
                            i.fa-solid.fa-xmark
                .card-footer 
                  a(href=`/${list.id}/create-card`) Create new Card
                .card-icons
                  a(href=`/edit-list/${list.id}` class="edit-icon")
                    i.fa-solid.fa-pen
                  a(href=`/delete-list/${list.id}` class="delete-icon")
                    i.fa-solid.fa-xmark


    include ./includes/footer

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js', integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM', crossorigin='anonymous')

